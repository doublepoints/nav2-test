<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="pioneer2dx" canonical_link='base_footprint'>
    <plugin
        filename="ignition-gazebo-joint-state-publisher-system"
        name="ignition::gazebo::systems::JointStatePublisher">
    </plugin>

    <link name='base_footprint'/>

    <joint name='footprint_to_base_joint' type='fixed'>
      <pose>0 0 0.01 0 0 0</pose>
      <parent>base_footprint</parent>
      <child>base_link</child>
      <use_parent_model_frame>true</use_parent_model_frame>
    </joint>

    <!-- 优化物理属性，使模型在控制下更加稳定 -->
    <self_collide>false</self_collide>

    <link name="base_link">
      <pose relative_to='base_footprint'>0 0 0.16 0 0 0</pose>
      <inertial>
        <mass>5.67</mass>
        <inertia>
          <ixx>0.07</ixx>
          <iyy>0.08</iyy>
          <izz>0.10</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <gravity>true</gravity>
      <kinematic>false</kinematic>  <!-- 允许物理引擎控制 -->
      <enable_wind>false</enable_wind>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.445 0.277 0.17</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <pose>0 0 0.04 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://my_sim_tesi_gazebo/models/pioneer2dx/meshes/chassis.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="caster_collision">
        <pose>-0.200 0 -0.12 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.04</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="caster_visual">
        <pose>-0.200 0 -0.12 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.04</radius>
          </sphere>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/FlatBlack</name>
          </script>
        </material>
      </visual>
    </link>

    <link name="lidar_link">
      <pose>0 0 0.25 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.000166667</ixx>
          <iyy>0.000166667</iyy>
          <izz>0.000166667</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </visual>

      <sensor name='front_lidar' type='gpu_lidar'>
        <pose>0 0 0 0 0 0</pose>
        <topic>/model/robot_scan/scan</topic>
        <ignition_frame_id>robot_scan/lidar_link</ignition_frame_id>
        <update_rate>20</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>450</samples> <!-- 450 for simulation and 1200 for scanning -->
              <resolution>1</resolution>
              <min_angle>-3.1459</min_angle>
              <max_angle>3.1459</max_angle>
            </horizontal>
            <vertical>
              <samples>16</samples>
              <resolution>1</resolution>
              <min_angle>-0.261799</min_angle>
              <max_angle>0.261799</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.05</min>
            <max>5</max> <!-- 5 for simulation and 15 for scanning-->
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <visualize>true</visualize>
      </sensor>
    </link>

    <link name="right_wheel">
      <pose relative_to='base_link'>0.1 -0.17 -0.05 1.5707 0 0</pose>
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.0051</ixx>
          <iyy>0.0051</iyy>
          <izz>0.0090</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.11</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100000.0</mu>
              <mu2>100000.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.11</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/FlatBlack</name>
          </script>
        </material>
      </visual>
    </link>
    <link name="left_wheel">
      <pose relative_to='base_link'>0.1 0.17 -0.05 -1.5707 0 0</pose>
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.0051</ixx>
          <iyy>0.0051</iyy>
          <izz>0.0090</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.11</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100000.0</mu>
              <mu2>100000.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.11</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/FlatBlack</name>
          </script>
        </material>
      </visual>
    </link>

    <joint name='lidar_joint' type='fixed'>
      <parent>base_link</parent>
      <child>lidar_link</child>
    </joint>

    <joint name='left_wheel_joint' type='revolute'>
      <pose relative_to='left_wheel'/>
      <parent>base_link</parent>
      <child>left_wheel</child>
      <use_parent_model_frame>true</use_parent_model_frame>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
          <effort>10</effort>
          <velocity>10</velocity>
        </limit>
      </axis>
      <!-- 添加以下物理参数 -->
      <physics>
        <ode>
          <implicit_spring_damper>1</implicit_spring_damper>
          <cfm>0.001</cfm>
          <erp>0.99</erp>
        </ode>
      </physics>
    </joint>

    <joint name='right_wheel_joint' type='revolute'>
      <pose relative_to='right_wheel'/>
      <parent>base_link</parent>
      <child>right_wheel</child>
      <use_parent_model_frame>true</use_parent_model_frame>
      <axis>
        <xyz expressed_in='__model__'>0 1 0</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
          <effort>10</effort>
          <velocity>10</velocity>
        </limit>
      </axis>
      <!-- 添加以下物理参数 -->
      <physics>
        <ode>
          <implicit_spring_damper>1</implicit_spring_damper>
          <cfm>0.001</cfm>
          <erp>0.99</erp>
        </ode>
      </physics>
    </joint>
    <!-- 添加姿态锁定插件，防止模型倾斜或翻滚 -->
    <plugin filename="ignition-gazebo-pose-publisher-system" 
            name="ignition::gazebo::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_visual_pose>true</publish_visual_pose>
      <publish_collision_pose>true</publish_collision_pose>
      <update_frequency>30</update_frequency>
    </plugin>
    <!-- 添加位置控制支持插件 -->
    <plugin filename="ignition-gazebo-apply-joint-force-system"
            name="ignition::gazebo::systems::ApplyJointForce">
      <joint_name>footprint_to_base_joint</joint_name>
    </plugin>
  </model>
</sdf>
